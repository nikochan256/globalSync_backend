<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>   <!-- windows target unlocks WinForms -->
    <UseWindowsForms>true</UseWindowsForms>               <!-- gives us Clipboard.SetText() -->
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>ValentineBuild</RootNamespace>
    <AssemblyName>ValentineBuild</AssemblyName>
  </PropertyGroup>

  <!-- No NuGet packages needed — Windows.Forms is built into .NET on Windows -->

</Project>